<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="taskData"
            type="com.example.nativeapps.data.model.Task" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/task_padding"
        android:layout_marginStart="@dimen/task_padding_bottom"
        android:layout_marginTop="@dimen/task_padding_top"
        android:layout_marginEnd="@dimen/task_padding_bottom"
        android:layout_marginBottom="@dimen/task_padding_top"
        android:gravity="center_vertical"
        android:background="@color/purple_200">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@{taskData.toString()}" />
    </FrameLayout>
</layout>